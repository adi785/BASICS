import random

def number_guess():
    print("Welcome to the number guessing game!!")
    print("Let me think of a number between 1 to 100")
    secret_number = random.randint(1, 100)
    attempts = 0

    while True:
        g = input("Your guess: ")

        if not g.isdigit():
            print("Please enter a valid number. Try again!")
            continue

        g = int(g)
        attempts += 1

        if g < secret_number:
            print("ðŸ”» Too low! Try again.")
        elif g > secret_number:
            print("ðŸ”º Too high! Try again.")
        else:
            print(f"âœ… Congratulations! You guessed it in {attempts} attempts.")
            break

# Call the function to start the game
number_guess()
